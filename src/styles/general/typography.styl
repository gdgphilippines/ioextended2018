baseSize()
  font-size 62.5%;

productSans()
  font-family 'Product Sans', sans-serif

roboto()
  font-family 'Roboto', sans-serif

h1()
  productSans()
  font-size 3.33rem
  font-weight normal

h2()
  productSans()
  font-size 2.9rem
  @media screen and (max-width: 400px)
    font-size 2.4rem

paragraph()
  productSans()
  font-size 1.75rem
  line-height 150%

navigation()
  productSans()
  font-size 1.6rem

note()
  roboto()
  font-size 1.25rem

time()
  productSans()
  font-size 3.125rem

body()
  roboto()