@import '../../styles/general/host-block.styl'
@import '../../styles/general/typography.styl'
@import '../../styles/general/color.styl'
@import '../../styles/general/spacing.styl'

.header-navigation
  padding: 0 $small

.navigation-list
  display flex
  list-style-type none

.navigation-item
  list-style-type: none
  padding 0 $micro;
  color $gray-2
  navigation()
  display: flex
  align-items: center

  &:first-child
    padding 0 $micro 0 0

  &:last-child
    padding 0 0 0 $micro

.navigation-item + .navigation-item::before
  content: 'âš«'
  padding-right: 2rem
  color: #ddd
  font-size: 1rem

.navigation-anchor
  font-size: 2rem
  color: inherit
  text-decoration: none

  &:hover:not(.active)
    opacity 0.8
    
  &.active
    transition: border 0.2s ease-in-out 
    border-bottom: 3px solid $orange