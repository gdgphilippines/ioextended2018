@import '../../styles/general/host-block.styl'
@import '../../styles/general/spacing.styl'
@import '../../styles/general/typography.styl'

.header
  display: flex
  align-items: center
  position: relative
  height: $rem-large

.header::before
  position: absolute
  right: 0px
  bottom: -5px
  left: 0px
  width: 100%
  height: 5px
  content: ""
  box-shadow: inset 0px 5px 6px -3px rgba(0, 0, 0, 0.4)

.header
  .title
    margin: 0
    padding-left: $small

  .spacer
    flex: 1

  .button
    margin-left: $small

.button
  border: 0
  background: none
  cursor: pointer
  border-radius: 50%
  padding: 0

  &:hover
    background: #eee

  &:focus
    outline: none

.icon
  width: $small
  height: $small

.mobile-only
  display: none

  @media screen and (max-width: 700px)
    display: block

.not-mobile
  display: block

  @media screen and (max-width: 700px)
    display: none

.logo-anchor
  text-decoration none
  color inherit

.logo-anchor::after
  content: 'Extended'
  font-family: 'Product Sans'
  font-weight: normal
  color: gray
  font-size: 0.9em
  opacity: 0.5

.logo
  height 4rem

navigation-loader
  display: flex
  align-items: center

// Temporary navigation 
.temporary-navigation
  list-style-type none
  padding: 0
  margin: 0
  display: flex
  border-left: 2px solid cornflowerblue
  padding-left: 2rem
  margin-left: 2rem
  margin-right: 2rem

  @media screen and (max-width: 800px)
    display none

  &__link
    all: unset
    font-family: 'Product Sans'
    color: #737373
    cursor pointer
    font-size: 2rem
    padding: 14px